@model RoleEditModel
<div class="bg-white rounded pl-3 pr-3 pt-2 pb-1 mb-2">
    <h3>Edit Role</h3>
    
    <form asp-action="Edit" method="post">
        <input type="hidden" name="roleName" value="@Model.Role.Name" />
        <input type="hidden" name="roleId" value="@Model.Role.Id" />
        <strong>
            Add То @Model.Role.Name
        </strong>

        <table class="table table-condensed table-bordered">
            @if (Model.NonМembers.Count() == 0)
            {
                <tr>
                    <td colspan="2">
                        All Users Are Members
                    </td>
                </tr>
            }
            else
            {
                foreach (IdentityUser user in Model.NonМembers)
                {
                    <tr>
                        <td class="col">@user.UserName</td>
                        <td class="col">
                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>

        <strong>
            Remove from @Model.Role.Name
        </strong>

        <table class="table table-condensed table-bordered">
            @if (Model.Members.Count() == 0)
            {
                <tr>
                    <td colspan="2">
                        No Users Are Members
                    </td>
                </tr>
            }
            else
            {
                foreach (IdentityUser user in Model.Members)
                {
                    <tr>
                        <td class="col">@user.UserName</td>
                        <td class="col">
                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
