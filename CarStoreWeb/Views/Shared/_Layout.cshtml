<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CarStore</title>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*" />
    <link rel="stylesheet" asp-href-include="lib/font-awesome/css/*" />
    <link rel="stylesheet" asp-href-include="css/myStyles.css" />

    <script asp-src-include="lib/jquery/jquery.js"></script>
    <script asp-src-include="lib/bootstrap/dist/js/*.js"></script>
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee
    </style>

</head>
    <body>
        <div class="container-fluid px-md-5 font-italic">
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 shadow-sm rounded mb-4">
                <div class="col-lg-4">
                    <a href="#" class="navbar-brand">
                        <img src="~/img/logo.jpg" alt="Logo" class="img-thumbnail" style="width:50px;">
                        CAR store
                    </a>
                </div>
                <div class="col-lg-4 text-lg-center ">
                    <a class="text-center"
                       asp-controller="Declaration"
                       asp-action="AddItem"
                       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
                        <i class="fa fa-plus" style="font-size:20px;color:black"></i>
                    </a>
                </div>
                <div class="col-lg-4">
                    <div class="float-lg-right">
                        <ul class="navbar-nav">
                            <li class="dropdown pull-right">
                                <a data-toggle="dropdown" aria-expanded="false" href="#" class="nav-link ">
                                    <span class="navbar-toggler-icon"></span>
                                </a>

                                <div role="menu" class="dropdown-menu dropdown-menu-right">
                                    <a role="presentation" href="#" class="dropdown-item">About</a>
                                    <a role="presentation" href="#" class="dropdown-item">Reserve</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="row">
                <div class="col-lg-4 mb-4 rounded">
                    @await Component.InvokeAsync("NavigationMenu")
                </div>

                <div class="col-lg-8 mb-4 rounded">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>
