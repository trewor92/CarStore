@{
    ViewBag.Title = "Register";
    Layout = "_AdminLayout";
}
@model CreateModel

<div class="bg-white rounded pl-3 pr-3 pt-2 pb-1 mb-2">
    <h2>Create user</h2>
    <p>Please enter details:</p>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Name:</label>
            <div><span asp-validation-for="Name" class="text-danger"> </span></div>
            <input asp-for="Name" class="form-control  " />
        </div>
        <div class="form-group">
            <label>Password:</label>
            <div><span asp-validation-for="Password" class="text-danger"> </span></div>
            <input asp-for="Password" class="form-control  " />
        </div>
        <div class="form-group">
            <label>Confirm password:</label>
            <div><span asp-validation-for="ConfirmPassword" class="text-danger"> </span></div>
            <input asp-for="ConfirmPassword" class="form-control  " />
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a asp-action="List" asp-controller="Declaration" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>

